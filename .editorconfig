# EditorConfig is awesome: https://EditorConfig.org

# 表明这是最顶层的配置文件
root = true

# 对所有文件生效
[*]
# 编码字符集
charset = utf-8
# 缩进风格使用空格
indent_style = space
# 缩进大小为2个空格
indent_size = 2
# 换行符使用 lf
end_of_line = lf
# 文件末尾插入新行
insert_final_newline = true
# 删除行末尾空格
trim_trailing_whitespace = true

# 对 Markdown 文件的特殊配置
[*.md]
trim_trailing_whitespace = false

# 对 package.json 或 package-lock.json 的特殊配置
[package*.json]
indent_style = space
indent_size = 2

# 对 TypeScript 和 JavaScript 文件的配置
[*.{ts,js,vue}]
quote_type = single